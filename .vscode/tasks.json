{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-g",
                "-std=c++17",
                "-isystem ${workspaceFolderBasename}/bin",
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/src/source/",
                "${workspaceFolder}/src/source/*.cpp",
                "-o",
                "${workspaceFolder}/bin/GameTest",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lGL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}